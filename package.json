{
  "name": "countdown",
  "author": {
    "name": "Graham Still",
    "email": "gstill92@gmail.com",
    "url": "https://github.com/adoxography"
  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-is-dev": "^1.1.0",
    "lodash": "^4.17.15",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start-react": "rescripts start",
    "build-react": "rescripts build",
    "test": "rescripts test",
    "start-electron": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "yarn build-react",
    "build": "electron-builder -m",
    "start": "concurrently \"BROWSER=none yarn start-react\" \"wait-on http://localhost:3000 && yarn start-electron\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "ca.adoxography.countdown",
    "productName": "Countdown",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.14",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "^5.1.0",
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^16.13.0",
    "wait-on": "^4.0.1"
  }
}
